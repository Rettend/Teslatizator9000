<UserControl x:Class="Teslatizator9000.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Teslatizator9000"
             mc:Ignorable="d" >
    <WrapPanel x:Name="Container" Height="1080" Width="1920">
        <WrapPanel.Background>
            <ImageBrush ImageSource="images\Backgrounds\Settings-bg.jpg" Stretch="UniformToFill"/>
        </WrapPanel.Background>
        <Label Content="Settings" FontFamily="Gill Sans MT" FontSize="50" Width="1920" HorizontalContentAlignment="Center" Margin="0,20,0,0" />
        <Button Click="Button_Click_Home" Content="Home" Background="#00000000" Margin="1700,-68,0,0" HorizontalContentAlignment="Center" FontFamily="Gill Sans MT" FontSize="40" VerticalContentAlignment="Center" Padding="1" BorderBrush="#00707070" />
    </WrapPanel>
</UserControl>
